<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordGenerator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_light</item>

        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/text_light</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:editTextColor">@color/white</item>
        //цвет фона
        <item name="android:colorBackground">#141414</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="my" parent="Theme.PasswordGenerator" >
        <item name="android:background">@color/dark_for_password</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="button_style" parent="Theme.PasswordGenerator">
        <item name="colorPrimary">@color/yellow</item>
       <item name="android:textColor">@color/text_dark</item>
    </style>
</resources>